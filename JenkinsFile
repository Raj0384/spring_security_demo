pipeline {
    agent any
    
    tools {
        jdk 'Java17'         // Name of JDK in Jenkins Global Tool Config
        maven 'Maven3'      // Name of Maven installation in Jenkins Global Tool Config
    }

    environment {
        APP_NAME = "spring-boot-app"
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Raj0384/spring_security_demo.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        
        stage('Run Application') {
            steps {
                sh "nohup java -jar target/*.jar > app.log 2>&1 &"
            }
        }
    }
    
    post {
        success {
            echo "✅ Build and deployment successful!"
        }
        failure {
            echo "❌ Build failed!"
        }
    }
}
